@page "/ModuleBeli/TransBeli"
@using eSoft.Pembelian.Model
@using eSoft.Pembelian.Services
@using eSoft.Order.Services
@using eSoft.Hutang.Services

@inject IPurchaseServices service
@inject IPayableServices serviceAP
@inject IOrderPurchaseServices serviceOrder

@implements IDisposable
@inject NavigationManager navigationmanager

<div class="container-fluid">
    <h1>Transaksi Pembelian</h1>
</div>


<div class="container-fluid">
    <NavLink href="/ModuleBeli/AddTransBeli" class="btn btn-primary">Beli</NavLink> &nbsp;&nbsp;
    <NavLink href="/ModuleBeli/AddTransReturBeli" class="btn btn-primary">Retur</NavLink>
    <NavLink href="/ModuleBeli/AddTransImportBeli" class="btn btn-primary">Terima Import</NavLink>
</div>

<br />
<br />


<div class="container-fluid">
    <DataGridVerticalComponent Items="TransHeader" Context="transaksi" GetFilterableText="@(item =>$"{item.NoLpb} {item.NamaSup} {item.Keterangan}")">
        <TableHeader>

            <th scope="col" style="width:15%">No Bukti</th>
            <th scope="col" style="width:20%">Supplier</th>

            <th scope="col" style="width:20%">Keterangan</th>
            <th scope="col" style="width:10%">Total</th>
            <th scope="col" style="width:20%">Jumlah/PPn/Ongkir</th>

            <th scope="col" style="width:15%"></th>
        </TableHeader>
        <RowTemplate>

            <td style="width:15%">
                @transaksi.NoLpb
                <br />
                <span class="badge bg-primary">@transaksi.Tanggal.ToShortDateString()</span>
            </td>
            <td style="width:20%">@transaksi.NamaSup</td>

            <td style="width:20%">@transaksi.Keterangan</td>
            <td style="width:10%">@transaksi.TtlJumlah.ToString("N")</td>
            <td style="width:20%">
                <span>Jumlah. &nbsp;</span>@transaksi.Jumlah.ToString("N") <br />
                <span>PPn. &nbsp;</span>@transaksi.Ppn.ToString("N") <br />
                <span>Ongkir. &nbsp;</span>@transaksi.Ongkos.ToString("N") <br />
            </td>


            <td>
                @if (string.IsNullOrEmpty(transaksi.NoPrj))
                {
                    <button @onclick="() => OpenRubah(transaksi.IrTransHId)" class="btn btn-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                        </svg>
                    </button>
                }
                <button @onclick="() => OpenDeleteDialog(transaksi)" class="btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                    </svg>
                </button>
                <button @onclick="() => OpenPrint(transaksi.IrTransHId)" class="btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer" viewBox="0 0 16 16">
                        <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z" />
                        <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z" />
                    </svg>
                </button>
            </td>
        </RowTemplate>
    </DataGridVerticalComponent>


</div>

@if (DeleteDialogOpen)
{
    <ModalDialogComponent Title="Are you sure?" Text=@textDelete OnClose="OnDeleteDialogClose"></ModalDialogComponent>
}

@if (NullDialogOpen)
{
    <ModalDialogComponent Title="MESSAGE" Text=@textAlert TombolSave="false" OnClose="OnDeleteNullClose"></ModalDialogComponent>
}



@code {

    private List<IrTransH> TransHeader;
    private List<IrTransD> TransDetail;
    private IrTransH _bankToDelete;

    public string textAlert { get; set; } = "Transaction Already Posting";
    public string textDelete { get; set; } = "Do you want to delete this entry?";

    public bool DeleteDialogOpen { get; set; }
    public bool NullDialogOpen { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        LoadGet();

    }

    private void LoadGet()
    {
        TransHeader = service.GetTransH();
        TransDetail = service.GetTransD();
    }


    private async Task OnDeleteDialogClose(bool accepted)
    {
        if (accepted)
        {
            await service.DelTransH(_bankToDelete.IrTransHId);
            serviceOrder.DelOrderAktif(_bankToDelete.NoPrj);

            _bankToDelete = null;
        }

        DeleteDialogOpen = false;
        LoadGet();

        StateHasChanged();

    }

    private void OnDeleteNullClose(bool accepted)
    {
        //if (accepted)
        //{
        //    await service.DelBank(_bankToDelete.CbBankId);
        //    _bankToDelete = null;
        //}

        DeleteDialogOpen = false;
        NullDialogOpen = false;
        LoadGet();
        StateHasChanged();

    }
    private void OpenDeleteDialog(IrTransH bank)
    {
        if (bank.Cek == "3")
        {
            textAlert = "Transaction Already Posting";
            NullDialogOpen = true;
        }
        else
        {
            if (serviceAP.CekBeli(bank.NoLpb))
            {
                textDelete = "Do you want to delete this entry?";
                DeleteDialogOpen = true;
            }
            else
            {
                DeleteDialogOpen = false;

                textAlert = "Transaction have a Payment";
                NullDialogOpen = true;
            }
        }


        _bankToDelete = bank;
        StateHasChanged();
    }

    private void OpenRubah(int xKdBank)
    {
        navigationmanager.NavigateTo($"/ModuleBeli/EditTransBeli/{xKdBank}");
    }

    private void OpenPrint(int xKdBank)
    {
        navigationmanager.NavigateTo($"/PrintBuktiBayar/{xKdBank}");
    }


    public void Dispose()
    {

    }
}
