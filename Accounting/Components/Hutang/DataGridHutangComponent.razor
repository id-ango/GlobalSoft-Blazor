
@using eSoft.Hutang.Model

@using System.Collections.Generic
@using System.Linq


<div class="bg-light justify-content-between">
    @nJumlah
    <p align="right">
        <input class="mr-sm-2" type="search" placeholder="Search" aria-label="Search" @bind-value="searchText">
        <button class="btn btn-outline-success my-2 my-sm-0" type="button" @onclick="searchFind">Search</button>
    </p>
</div>
<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th scope="col" style="width:25%">Supplier</th>
            <th scope="col" style="width:45%">Alamat</th>
            <th scope="col" style="width:15%">Telpon</th>
            <th scope="col" style="width:15%">Hutang</th>
            <th></th>
        </tr>
    </thead>
</table>
<div style="display:block;position:relative;height:430px;overflow:auto ">
    <table class="table table-striped table-hover">

       
        <tbody>
            @foreach (var transaksi in result)
            {
            <tr>

                <td style="width:25%">
                    @transaksi.NamaSup
                    <br />
                    <span class="badge bg-primary">@transaksi.Supplier</span>

                </td>
                <td style="width:45%">@transaksi.Alamat</td>
                <td style="width:15%">@transaksi.Telpon</td>
                <td style="width:15%">@transaksi.Hutang.ToString("N")</td>

                <td>
                    <button @onclick="() => BtnDetail(transaksi)" class="btn btn-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-down-square" viewBox="0 0 16 16">
                            <path d="M3.626 6.832A.5.5 0 0 1 4 6h8a.5.5 0 0 1 .374.832l-4 4.5a.5.5 0 0 1-.748 0l-4-4.5z" />
                            <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm15 0a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2z" />
                        </svg>
                    </button>

                    @*<button @onclick="() => OpenPrint(transaksi.OeTransHId)" class="btn btn-danger">Print</button>*@
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>

@code {

    [Parameter]
    public List<ApSuppl> Items { get; set; }

    [Parameter]
    public EventCallback<ApSuppl> OnDetail { get; set; }

    private string nJumlah { get; set; }

    private List<ApSuppl> result = new List<ApSuppl>();
    private List<ApSuppl> result2 = new List<ApSuppl>();

    private string searchText;


    private Task BtnDetail(ApSuppl xKode)
    {
        return OnDetail.InvokeAsync(xKode);

    }
    protected override void OnInitialized()
    {
        base.OnInitialized();

    }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        result2 = Items;
        searchFind();
        StateHasChanged();
    }

    private void searchFind()
    {
        result2 = Items;

        if (!string.IsNullOrEmpty(searchText))
        {


            //   result = result.Where(x => x.NamaCust || x.AlamatKirim).ToList();
            result2 = (from t in result2
                       where
   ((t.NamaSup?.Contains(searchText, StringComparison.InvariantCultureIgnoreCase) ?? false) ||
   (t.Alamat?.Contains(searchText, StringComparison.InvariantCultureIgnoreCase) ?? false) ||
     (t.Supplier?.Contains(searchText, StringComparison.InvariantCultureIgnoreCase) ?? false))
                       select t).ToList();



        }
        if (result2.Count != 0)
            result = result2;
        else
            result = Items;

        nJumlah = result.Sum(x => x.Hutang).ToString("N");
    }



}
