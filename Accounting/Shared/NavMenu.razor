<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Accounting</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
        <li class="nav-item px-3">

            <NavLink class="nav-link" href="#" @onclick="(()=>expandCashBank = !expandCashBank)">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Cash Bank
            </NavLink>
            @if (expandCashBank)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ModuleBank/SetupCashBank">
                            <span aria-hidden="true"></span> Setup Bank/Kas
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ModuleBank/SetupSrcCode">
                            <span aria-hidden="true"></span> Setup Src Code
                        </NavLink>
                    </li>
                </ul>


            }


        </li>
        <li class="nav-item px-3">

            <NavLink class="nav-link" href="#" @onclick="(()=>expandLedger = !expandLedger)">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Ledger
            </NavLink>
            @if (expandLedger)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ModuleLedger/SetupAkunGl">
                            <span aria-hidden="true"></span> Setup Account
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ModuleBank/SetupSrcCode">
                            <span aria-hidden="true"></span> Setup Src Code
                        </NavLink>
                    </li>
                </ul>


            }


        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    // toogle sub menu
    private bool expandCashBank;
    private bool expandLedger;

    //


    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
